class Solution {
    public int[] solution(long n) {
        
        String a = String.valueOf(n);
        int[] answer = new int[a.length()];
        
        for(int i=0; i<a.length(); i++) {
            int temp = Integer.parseInt(a.substring(a.length()-1-i,a.length()-i));
            answer[i] = temp;
        }
        return answer;
    }
}
